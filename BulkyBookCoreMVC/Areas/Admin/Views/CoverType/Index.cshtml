@model IEnumerable<CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType</h2>

        </div>
        <div class="col-6 text-end">

            <a asp-area="Admin" asp-controller="CoverType" asp-action="Create" class="btn btn-primary">

                <i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType
            </a>

        </div>

    </div>
    <br />
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-auto btn-group" role="group">
                            <a asp-area="Admin" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>
                            <a asp-area="Admin" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-trash3"></i> &nbsp;  Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>