@model CoverType
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<form method="post" asp-action="DeletePOST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Delete CoverType</h3>
        </div>

        <input asp-for="Id" hidden />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">
            Back To List
        </a>
    </div>
    


</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}