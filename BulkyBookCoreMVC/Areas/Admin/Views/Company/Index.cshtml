@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Company List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>

    
    
    <hr />
    <div><h4>Javascript DataTable</h4></div>
    <br />

    <table id="tblData" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>

    </table>

</div>

@section Scripts{

    <script src="~/js/company.js"></script>
}





